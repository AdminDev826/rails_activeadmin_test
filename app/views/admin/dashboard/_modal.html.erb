<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h5 class="modal-title">Modal title</h5>
    </div>
    <div class="modal-body">
      <h3>Tab fields</h3>
      <div class="modal-listview">
        <ul class="list-group shown-fields">
          <% data.each do |item| %>
            <li class="list-group-item">
              <label><%= item[:text] %></label>
              <span class="pull-right">
                <input class="toggle-event" type="checkbox" data-toggle="toggle" <%= "checked" if item[:checked] %> data-size="mini">
              </span> 
            </li>
          <% end %>
        </ul>
      </div>
      <hr />
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">Save changes</button>
    </div>
  </div>
</div>

<script>
  var hidden_fields = [];
  $('.toggle-event').change(function() {
    var checked = $(this).prop('checked');
    var parentItem = $(this).parent().parent().parent();
    var itemText = parentItem.children("label").text();
    if(checked) {
      hidden_fields.push(itemText);
    }else {
      hidden_fields.pop(itemText);
    }
    console.log(hidden_fields);
  })
</script>